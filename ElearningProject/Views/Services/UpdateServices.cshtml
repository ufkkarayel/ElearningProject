@model ElearningProject.DAL.Entities.Services
@{
    ViewBag.Title = "UpdateServices";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmet Güncelleme Sayfası</h2>

<form method="post">
    <label>Hizmet ID</label>
    @Html.TextBoxFor(x => x.ServicesID, new { @class = "form-control" })
    <br /> <br />
    <label>Hizmet Başlığı</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br /> <br />
    <label>Hizmet Açıklaması</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br /> <br />
    <button class="btn btn-success">Güncelle</button>
</form>