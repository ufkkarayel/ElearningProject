@model List<ElearningProject.DAL.Entities.Services> 
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                Hizmet Listesi
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Hizmet Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ServicesID</td>
                            <td>@item.Title</td>
                            <td><a href="/Services/DeleteServices/@item.ServicesID" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Services/UpdateServices/@item.ServicesID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/Services/AddServices/" class="btn btn-outline-primary">Yeni Hizmet Girişi</a>
            </div>
        </div>
    </div>
</div>

